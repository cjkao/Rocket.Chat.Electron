{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020",
      "ESNext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "./app",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    // "noEmit": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
}